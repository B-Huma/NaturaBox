@using e_TicaretApp.Mvc.Models.ViewModels
@model MyProductsViewModel
@{
	ViewData["Title"] = "My Products";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Fresh and Organic</p>
					<h1>My Products</h1>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container mt-5">
	<div class="col-12">
		<a class="btn btn-primary mb-3" asp-controller="Product" asp-action="Create">
			<i class="bi bi-pencil-square">Add Product</i>
		</a>
	</div>

	<div class="card shadow">
		<div class="card-header bg-primary text-white">
			<h3 class="mb-0 text-center text-white">My Products</h3>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-hover">
					<thead class="thead-light">
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Price</th>
							<th>Details</th>
							<th>Stock Amount</th>
							<th>Category</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var product in Model.Products)
						{
							<tr>
								<td>
									<img src="@product.ImageUrl" alt="@product.Name" style="width:60px; height:60px; object-fit: cover;" class="img-thumbnail" />
								</td>
								<td>@product.Name</td>
								<td>@product.Price.ToString("C2")</td>
								<td>@product.Details</td>
								<td>@product.StockAmount</td>
								<td>@product.CategoryName</td>
								<td>
									<div class="btn-group" role="group">
										<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i>Edit</a>
										<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fas fa-trash"></i>Delete</a>

									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
				
			</div>
		</div>
	</div>
</div>

