@model object

@{
	ViewBag.Title = "Forgot Password";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<h1>Forgot Password</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container contact-form-section mt-150 mb-150">
    <div class="row">
        <h2 class="col-12 text-center">Forgot Password</h2>
        <div class="col-12 col-md-6 offset-md-3">
            <form method="post" action="/forgot-password">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success site-btn mr-auto">Submit</button>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-success site-btn mr-2">Login</a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-success site-btn">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>