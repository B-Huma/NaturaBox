@using AdminMvc.Models.ViewModels
@model LoginViewModel

@{
    Layout = null;
}
<div style="min-height: 100vh; display: flex; justify-content: center; align-items: center; background-color: #f1f3f5;">
    <div style="background: white; padding: 40px; border-radius: 12px; width: 100%; max-width: 400px; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);">
        <h2 style="text-align: center; margin-bottom: 30px; color: #28a745;">Login</h2>
        <form asp-controller="Auth" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 15px;"></div>

            <div style="margin-bottom: 20px;">
                <label asp-for="Email" style="display: block; margin-bottom: 5px; font-weight: 500;">Email</label>
                <input asp-for="Email" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger" style="font-size: 0.875rem;"></span>
            </div>

            <div style="margin-bottom: 25px;">
                <label asp-for="Password" style="display: block; margin-bottom: 5px; font-weight: 500;">Password</label>
                <input asp-for="Password" type="password" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger" style="font-size: 0.875rem;"></span>
            </div>

            <div style="display: flex; flex-direction: column; gap: 10px;">
                <button type="submit" style="padding: 10px; background-color: #28a745; color: white; border: none; border-radius: 6px; font-weight: bold; transition: 0.3s;">Login</button>

            </div>
        </form>
    </div>
</div>

