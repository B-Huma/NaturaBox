@using AdminMvc.Models.ViewModels
@model List<UserListViewModel>

@{
    ViewBag.Title = "All Users";
}
<div class="card shadow">
	<div class="card-header bg-primary text-white">
		<h3 class="mb-0 text-center text-white">Users</h3>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead class="thead-light">
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Email</th>
						<th>Role</th>
						<th>Is Confirmed</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var user in Model)
					{
						<tr>
							<td>@user.FirstName</td>
							<td>@user.LastName</td>
							<td>@user.Email</td>
							<td>@user.Role</td>
							<td>@user.Enabled</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
</div>
