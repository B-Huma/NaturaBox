@using AdminMvc.Models.ViewModels
@model List<UserListViewModel>

@{
	ViewBag.Title = "Seller Request";
}


<div class="card shadow">
	<div class="card-header bg-primary text-white">
		<h3 class="mb-0 text-center text-white">Seller Request</h3>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Email</th>
						<th>Enabled</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var user in Model)
					{
						<tr>
							<td>@user.FirstName</td>
							<td>@user.LastName</td>
							<td>@user.Email</td>
							<td>@(user.Enabled)</td>
							<td>
								<div class="btn-group" role="group">
									<a asp-controller="User" asp-action="Approve" asp-route-id="@user.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-check"></i>Approve</a>
									<a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fas fa-trash"></i>Delete</a>

								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
