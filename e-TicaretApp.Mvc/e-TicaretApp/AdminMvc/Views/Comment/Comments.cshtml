@using AdminMvc.Models.ViewModels
@model List<CommentViewModel>
@{
	ViewBag.Title = "Product Comments";
}


<div class="card shadow">
	<div class="card-header bg-primary text-white">
		<h3 class="mb-0 text-center text-white">Categories</h3>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Product Name</th>
						<th>User FullName</th>
						<th>Text</th>
						<th>StarCount</th>
						<th>Created At</th>
						<th>Is Confirmed</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var comment in Model)
					{
						<tr>
							<td>@comment.ProductName</td>
							<td>@comment.UserFullName</td>
							<td>@comment.Text</td>
							<td>@comment.StarCount</td>
							<td>@comment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
							<td>@(comment.IsConfirmed ? "Yes" : "No")</td>
							<td>
								<div class="btn-group" role="group">
									<a asp-controller="Comment" asp-action="Confirm" asp-route-id="@comment.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-check"></i>Approve</a>
									<a asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fas fa-trash"></i>Delete</a>

								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

