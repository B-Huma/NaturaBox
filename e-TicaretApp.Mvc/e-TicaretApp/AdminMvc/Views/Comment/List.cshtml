@using AdminMvc.Models.ViewModels
@model List<CommentViewModel>
@{
    ViewBag.Title = "Product Comments";
}


<div class="card shadow">
	<div class="card-header bg-primary text-white">
		<h3 class="mb-0 text-center text-white">Categories</h3>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead class="thead-light">
					<tr>
						<th>Product Name</th>
						<th>User FullName</th>
						<th>Text</th>
						<th>StarCount</th>
						<th>Created At</th>
						<th>Is Confirmed</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var comment in Model)
					{
						<tr>
							<td>@comment.ProductName</td>
							<td>@comment.UserFullName</td>
							<td>@comment.Text</td>
							<td>@comment.StarCount</td>
							<td>@comment.CreatedAt</td>
							<td>@comment.IsConfirmed</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
</div>

