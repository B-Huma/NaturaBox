@using AdminMvc.Models.ViewModels
@model List<CategoryViewModel>

<div class="container mt-5">
	<div class="col-12">
		<a class="btn btn-primary mb-3" asp-controller="Category" asp-action="Create">
			<i class="bi bi-pencil-square">Add Category</i>
		</a>
	</div>

	<div class="card shadow">
		<div class="card-header bg-primary text-white">
			<h3 class="mb-0 text-center text-white">Categories</h3>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-hover">
					<thead class="thead-light">
						<tr>
							<th>Category Name</th>
							<th>Color</th>
							<th>Icon</th>
							<th>Created At</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var category in Model)
						{
							<tr>
								<td>@category.Name</td>
								<td>
									<div style="width: 24px; height: 24px; background-color: @category.Color; border: 1px solid #ccc; display: inline-block; border-radius: 4px;"></div>
									<span class="ms-2"></span>
								</td>

								<td><i class="@category.IconCssClass"></i></td>
								<td>@category.CreatedAt</td>
								<td>
									<div class="btn-group" role="group">
										<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i>Edit</a>
										<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fas fa-trash"></i>Delete</a>

									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>